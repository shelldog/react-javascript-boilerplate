{
  "name": "react-boilerplate-(js)",
  "version": "1.0.0",
  "description": "Configuration boilerplate for React app in JavaScript (Webpack, Babel, ESLint, Prettier, Jest, ...).",
  "main": "src/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development webpack serve --env ENVIRONMENT=development --config ./utils/__webpacks__/webpack.dev.js --mode development",
    "build:clean": "rimraf ./build",
    "build:process": "cross-env NODE_ENV=production webpack --env ENVIRONMENT=production --config ./utils/__webpacks__/webpack.prod.js --mode production",
    "lint": "eslint src/**/*.{js,jsx}",
    "linting": "eslint --fix src/**/*.{js,jsx}",
    "pretty": "prettier --check src/**/*.{js,jsx}",
    "prettify": "prettier --write src/**/*.{js,jsx}",
    "test:unit": "jest --passWithNoTests --testPathPattern=src/__tests__",
    "prepare": "husky install"
  },
  "author": "Hajime - Kha Tran.",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.10",
    "@babel/preset-env": "^7.16.10",
    "@babel/preset-react": "^7.16.7",
    "@testing-library/dom": "^8.11.2",
    "@testing-library/react": "^12.1.2",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.0",
    "image-minimizer-webpack-plugin": "^3.2.3",
    "imagemin": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.4",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}
